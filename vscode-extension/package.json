{
  "name": "connascence-safety-analyzer",
  "displayName": "Connascence Safety Analyzer",
  "description": "Enterprise-grade code analysis with Safety Standards/High Quality safety compliance and grammar-enhanced refactoring - Consolidated Package",
  "version": "1.0.0",
  "publisher": "connascence-systems",
  "repository": {
    "type": "git",
    "url": "https://github.com/DNYoussef/connascence-safety-analyzer.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Code Quality",
    "Security",
    "Refactoring"
  ],
  "keywords": [
    "connascence",
    "code quality",
    "nasa",
    "jpl",
    "safety",
    "refactoring",
    "grammar",
    "ast"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:markdown",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "connascence.analyzeFile",
        "title": "Analyze File",
        "category": "Connascence",
        "icon": "$(search)"
      },
      {
        "command": "connascence.analyzeWorkspace",
        "title": "Analyze Workspace",
        "category": "Connascence"
      },
      {
        "command": "connascence.validateSafety",
        "title": "Validate Safety Standards/High Quality Safety",
        "category": "Connascence"
      },
      {
        "command": "connascence.suggestRefactoring",
        "title": "Suggest Refactoring",
        "category": "Connascence"
      },
      {
        "command": "connascence.applyAutofix",
        "title": "Apply Safe Autofix",
        "category": "Connascence"
      },
      {
        "command": "connascence.generateReport",
        "title": "Generate Quality Report",
        "category": "Connascence"
      },
      {
        "command": "connascence.toggleSafetyProfile",
        "title": "Toggle Safety Profile",
        "category": "Connascence"
      },
      {
        "command": "connascence.openSettings",
        "title": "Open Settings Panel",
        "category": "Connascence",
        "icon": "$(gear)"
      },
      {
        "command": "connascence.clearCache",
        "title": "Clear Analysis Cache",
        "category": "Connascence"
      },
      {
        "command": "connascence.exportReport",
        "title": "Export Analysis Report",
        "category": "Connascence",
        "icon": "$(export)"
      },
      {
        "command": "connascence.showDashboard",
        "title": "Show Dashboard",
        "category": "Connascence",
        "icon": "$(dashboard)"
      },
      {
        "command": "connascence.showHelp",
        "title": "Show Help Documentation",
        "category": "Connascence",
        "icon": "$(book)"
      },
      {
        "command": "connascence.refreshMarkdownTOC",
        "title": "Refresh",
        "category": "Markdown TOC",
        "icon": "$(refresh)"
      },
      {
        "command": "connascence.createMarkdownFile",
        "title": "New Markdown File",
        "category": "Markdown TOC",
        "icon": "$(new-file)"
      },
      {
        "command": "connascence.openMarkdownFile",
        "title": "Open",
        "category": "Markdown TOC"
      },
      {
        "command": "connascence.openMarkdownPreview",
        "title": "Open Preview",
        "category": "Markdown TOC",
        "icon": "$(preview)"
      },
      {
        "command": "connascence.setApiKey",
        "title": "Set API Key",
        "category": "Connascence AI"
      },
      {
        "command": "connascence.toggleProvider",
        "title": "Toggle AI Provider",
        "category": "Connascence AI"
      },
      {
        "command": "connascence.changeModel",
        "title": "Change AI Model",
        "category": "Connascence AI"
      },
      {
        "command": "connascence.configureServer",
        "title": "Configure MCP Server",
        "category": "Connascence AI"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "connascenceMarkdownTOC",
          "name": "ðŸ“š Markdown Files",
          "when": "workspaceFolderCount > 0",
          "contextualTitle": "Markdown Table of Contents"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "connascenceMarkdownTOC",
        "contents": "No markdown files found in the workspace.\n[Create New Markdown File](command:connascence.createMarkdownFile)\n[Refresh](command:connascence.refreshMarkdownTOC)",
        "when": "workspaceFolderCount > 0"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "connascence.refreshMarkdownTOC",
          "when": "view == connascenceMarkdownTOC",
          "group": "navigation"
        },
        {
          "command": "connascence.createMarkdownFile",
          "when": "view == connascenceMarkdownTOC",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "connascence.openMarkdownFile",
          "when": "view == connascenceMarkdownTOC && viewItem == markdownFile",
          "group": "1_open"
        },
        {
          "command": "connascence.openMarkdownPreview",
          "when": "view == connascenceMarkdownTOC && viewItem == markdownFile",
          "group": "1_open"
        },
        {
          "command": "connascence.createMarkdownFile",
          "when": "view == connascenceMarkdownTOC && viewItem == markdownFolder",
          "group": "2_create"
        }
      ],
      "editor/context": [
        {
          "command": "connascence.analyzeFile",
          "when": "editorHasSelection",
          "group": "connascence"
        },
        {
          "command": "connascence.suggestRefactoring",
          "when": "editorHasSelection",
          "group": "connascence"
        }
      ],
      "explorer/context": [
        {
          "command": "connascence.analyzeFile",
          "when": "resourceExtname == .py || resourceExtname == .c || resourceExtname == .cpp",
          "group": "connascence"
        }
      ]
    },
    "configuration": {
      "title": "Connascence Safety Analyzer",
      "properties": {
        "connascence.safetyProfile": {
          "type": "string",
          "enum": [
            "none",
            "general_safety_strict",
            "safety_level_1",
            "safety_level_3",
            "modern_general"
          ],
          "default": "modern_general",
          "description": "Active safety profile for analysis"
        },
        "connascence.grammarValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable grammar-enhanced validation"
        },
        "connascence.realTimeAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time analysis as you type"
        },
        "connascence.debounceMs": {
          "type": "number",
          "default": 1000,
          "description": "Debounce delay in milliseconds for real-time analysis"
        },
        "connascence.maxDiagnostics": {
          "type": "number",
          "default": 1500,
          "description": "Maximum number of diagnostics to show"
        },
        "connascence.enableIntelliSense": {
          "type": "boolean",
          "default": true,
          "description": "Enable connascence-aware IntelliSense completions"
        },
        "connascence.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show connascence metrics as code lens"
        },
        "connascence.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Show connascence explanations on hover"
        },
        "connascence.autoFixSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Show automatic fix suggestions"
        },
        "connascence.serverUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "Connascence MCP server URL"
        },
        "connascence.authenticateWithServer": {
          "type": "boolean",
          "default": false,
          "description": "Require authentication with server"
        },
        "connascence.frameworkProfile": {
          "type": "string",
          "enum": [
            "generic",
            "django",
            "fastapi",
            "react"
          ],
          "default": "generic",
          "description": "Framework-specific analysis profile"
        },
        "connascence.showInlineHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inline code quality hints"
        },
        "connascence.diagnosticSeverity": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info",
            "hint"
          ],
          "default": "warning",
          "description": "Severity level for diagnostics"
        },
        "connascence.enableVisualHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Enable bright color-coded highlighting for violations"
        },
        "connascence.highlightingIntensity": {
          "type": "string",
          "enum": [
            "subtle",
            "normal",
            "bright"
          ],
          "default": "normal",
          "description": "Intensity of visual highlighting"
        },
        "connascence.showEmojis": {
          "type": "boolean",
          "default": true,
          "description": "Show emoji annotations for violation types"
        },
        "connascence.aiIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered refactoring suggestions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "echo 'Using pre-compiled files'",
    "compile": "echo 'Using pre-compiled TypeScript files' && exit 0",
    "watch": "echo 'Using pre-compiled TypeScript files' && exit 0", 
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "build:production": "echo 'Using pre-compiled files'",
    "test": "echo 'No tests configured'"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.15.0",
    "mocha": "^10.2.0",
    "@types/mocha": "^10.0.6",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1"
  },
  "dependencies": {}
}