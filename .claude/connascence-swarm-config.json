{
  "name": "connascence-analyzer-swarm",
  "version": "2.0.0",
  "description": "Specialized swarm configuration for connascence analysis optimization",
  "metadata": {
    "created": "2025-09-03T12:39:00Z",
    "domain": "code-quality-analysis",
    "complexity": "enterprise",
    "specialization": "connascence-detection"
  },
  "topology": {
    "type": "hierarchical",
    "queenAgent": {
      "type": "code-analyzer",
      "capabilities": [
        "connascence-expertise",
        "architectural-analysis", 
        "refactoring-strategy",
        "quality-metrics"
      ],
      "priority": "critical"
    },
    "workerAgents": [
      {
        "type": "researcher",
        "role": "pattern-analyzer",
        "capabilities": [
          "ast-analysis",
          "coupling-detection",
          "pattern-recognition"
        ],
        "specialization": "static-analysis"
      },
      {
        "type": "coder", 
        "role": "implementation-specialist",
        "capabilities": [
          "python-expertise",
          "refactoring",
          "code-generation"
        ],
        "specialization": "connascence-fixes"
      },
      {
        "type": "tester",
        "role": "quality-validator",
        "capabilities": [
          "test-generation",
          "regression-testing",
          "coverage-analysis"
        ],
        "specialization": "analysis-validation"
      },
      {
        "type": "reviewer",
        "role": "architecture-auditor", 
        "capabilities": [
          "design-review",
          "best-practices",
          "security-analysis"
        ],
        "specialization": "architectural-review"
      }
    ],
    "coordination": {
      "strategy": "consensus-driven",
      "decisionThreshold": 0.75,
      "conflictResolution": "weighted-voting"
    }
  },
  "memory": {
    "namespace": "connascence-project",
    "sharedContext": [
      "connascence-patterns",
      "refactoring-history",
      "quality-metrics",
      "architectural-decisions"
    ],
    "persistenceLevel": "high",
    "compressionEnabled": true
  },
  "workflows": {
    "analysis": {
      "phases": [
        "ast-parsing",
        "pattern-detection",
        "severity-assessment", 
        "recommendation-generation",
        "report-compilation"
      ],
      "parallelizable": true,
      "checkpoints": true
    },
    "refactoring": {
      "phases": [
        "impact-analysis",
        "strategy-design",
        "implementation",
        "validation",
        "documentation"
      ],
      "rollbackCapable": true,
      "testingRequired": true
    }
  },
  "integration": {
    "tools": [
      "ast-engine",
      "ruff-linter",
      "pytest",
      "black-formatter",
      "mypy"
    ],
    "mcpServers": [
      "claude-flow",
      "ruv-swarm", 
      "memory",
      "markdown",
      "flow-nexus"
    ],
    "githubIntegration": {
      "enabled": true,
      "features": [
        "pr-analysis",
        "commit-hooks",
        "issue-tracking"
      ]
    }
  },
  "performance": {
    "targetMetrics": {
      "analysisSpeed": "< 30s for 1000 files",
      "memoryUsage": "< 2GB",
      "accuracyRate": "> 95%",
      "falsePositiveRate": "< 5%"
    },
    "optimization": {
      "caching": true,
      "parallelProcessing": true,
      "incrementalAnalysis": true
    }
  }
}